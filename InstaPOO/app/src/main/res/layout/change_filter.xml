<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/svimage"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Save image"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/decomposition"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/decomposition"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/decomposition" />

    <Button
        android:id="@+id/myfilter"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Mi filtro"
        android:onClick="Invert"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/desaturation"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/desaturation"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/desaturation" />

    <Button
        android:id="@+id/filtrogausiano"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Filtro Gausiano"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/averaging"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/averaging"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/averaging" />

    <Button
        android:id="@+id/averaging"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Avergaging"
        android:onClick="Averaging"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="375dp"
        app:layout_constraintRight_toLeftOf="@+id/desaturation"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="6dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/preview" />

    <Button
        android:id="@+id/desaturation"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:text="Desaturation"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="375dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="130dp"
        app:layout_constraintRight_toRightOf="@+id/decomposition"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/preview" />

    <Button
        android:id="@+id/decomposition"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:text="Decomposition"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="375dp"
        android:layout_marginStart="262dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="336dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>